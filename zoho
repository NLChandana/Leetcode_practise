ADAM number

#include<stdio.h>

int sq(int n){
    return n*n;
}

int rev(int n){
    int num = 0;
    while(n > 0){
        int dig = n %10;
        num = num * 10 + dig;
        n = n / 10;
    }
    return num;
}

int main()
{
    int n=14;
    int sq_n = sq(n);
    int rev_sq_n = rev(sq_n);
    int rev_n = rev(n);
    int sq_rev_n = sq(rev_n);
    
    if(rev_sq_n == sq_rev_n){
        printf("%d is Adam",n);
    }
    else{
        printf("%d is not Adam",n);
    }
    return 0;
}
